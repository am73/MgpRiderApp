<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@android:color/white">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:text="Rider Moto 2"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:gravity="right|center_vertical"/>
    <ImageView
            android:id="@+id/gimages"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/home"
            android:layout_marginTop="20dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <Button
                android:id="@+id/btn73"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Alex marquez"
                android:textSize="18sp"
                android:onClick="btnPress"
        />
        <Button
                android:id="@+id/btnDE20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Dimas Ekky"
                android:textSize="19sp"
                android:onClick="btnPress"
        />
        <Button
                android:id="@+id/btnJM88"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Jorge Martin"
                android:textSize="20dp"
                android:onClick="btnPress"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <Button
                android:id="@+id/btnLB7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Lorenzo Baldassari"
                android:textSize="19dp"
                android:onClick="btnPress"
        />
        <Button
                android:id="@+id/btnLM10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Luca Marini"
                android:textSize="19dp"
                android:onClick="btnPress"
        />
        <Button
                android:id="@+id/btnXV97"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Xavi Vierge"
                android:textSize="19dp"
                android:onClick="btnPress"
        />
    </LinearLayout>


</LinearLayout>